<main>
  <h1>Events</h1>
  <table>
    <thead>
      <tr>
        <th>Name:</th>
        <th>Address:</th>
        <th>Attended:</th>
      </tr>
    </thead>
    <tbody>
      <%# Oh hey, this is an ejs comment! It starts with a # %>
      <%# Write the line of EJS to iterate over movies using forEach #%>
      <% events.forEach(event => { %>
        <tr> 
          <td><%= event.name %></td>
          <td><%= event.date %></td>
          <td><%= event.attended %></td>
          <td><%= event.location %></td>
          <td><%= event.price %></td>
          <td><%= event.notes %></td>
          <td><a href="events/<%= event._id %>">Event Details</button></td>
            <form 
            action="/events/<%= event._id %>?_method=DELETE" 
            method="POST"
          >
            <button>X</button>
            </form>
        </tr>
     <% }) %>
    </tbody>
  </table>


</main>

