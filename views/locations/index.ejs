<%- include('../partials/nav') %>
<main>
  <section>
    <h1><%= title %></h1>
  <form id="add-location-form" action="/locations" method="POST">
    <label for="name-input">Name:</label>
    <input type="text" name="name" id="name-input">
    <label for="address-input">Address:</label>
    <input type="text" name="address" id="address-input">
    <button  class="button" type="submit">Add Location</button>
  </form>
    <% if (locations.length) { %>
     <h3>Locations</h3>
     <table>
      <thead>
        <tr>
          <th>Name:</th>
          <th>Address:</th>
          <th>Details:</th>
          <th>Delete:</th>
        </tr>
      </thead>
       <tbody>
         <% locations.forEach(function(location) { %>
          <tr>
             <td> <%= location.name %></td>
            
             <td> <%= location.address %></td>
             <td><a href="/locations/<%= location._id %>">DETAILS</a></td>
          <td>
            <form 
              action="/locations/<%= location._id %>?_method=DELETE"
              method="POST"
            >
              <button class="button">X</button>
            </form>
          </td>
           </tr>
         <% }) %>
       </tbody>
     </table>
   <% } else { %>
     <h3>No Locations Yet</h3>
   <% } %>
  </section>
</main>

<img class="compiled-image" src="../images/compiled-image.png" alt="compiled images">
<%- include('../partials/footer') %>