<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form 
    id="new-form" 
    action="/locations/<%= location._id %>?_method=PUT" 
    method="POST"
  >
    <label for="name-input">Name:</label>
    <input type="text" name="name" value="<%= location.name %>" id="name-input">
    <label for="address-input">Address:</label>
    <input 
      type="text" 
      name="address"
      value="<%= location.address %>"
      id="address-input"
    >
    <button class="button" type="submit">Save Location</button>
  </form>
  <img class="location-details" src="../images/location-details.jpg" alt="location-details">
</main>

<%- include("../partials/footer") %>